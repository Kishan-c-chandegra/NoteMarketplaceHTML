@model Notes_Marketplace.Models.UserProfileModel

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tag -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

    <!-- Title -->
    <title>UserProfile</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">

    <!-- International CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css" integrity="sha512-yye/u0ehQsrVrfSd6biT17t39Rg9kNc+vENcCXZuMz2a+LWFGvXUnYuWUW6pbfYj1jcBb/C39UZw2ciQvwDDvg==" crossorigin="anonymous" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/userprofile.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/css/userprofile-responsive.css">

</head>

<body data-spy="scroll" data-target=".navbar">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img id="logo-nav" src="~/images/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span id="mobile-nav-open-btn">&#9776;</span>
                <span id="mobile-nav-close-btn">&times;</span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SearchNotes","SearchNotes")">Search Notes </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard","Dashboard")">Sell Your Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BuyerRequest","BuyerRequest")">Buyer Request</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("FAQ","FAQ")">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactUs","ContactUs")">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <img src="@Url.Content(Model.profileUrl)">
                    </li>
                </ul>
                <a class="btn" id="btn-nav" title="Logout" role="button" onclick="location.href='@Url.Action("Logout", "SignUp")'">Logout</a>
            </div>
        </div>
    </nav>

    <!-- home -->
    <section id="home">
        <div id="home-content">
            <div class="container-fluid">
                <div class="text-center">
                    <h3>User Profile</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Details -->
    <section id="details">
        <div class="container-fluid">
            @using (Html.BeginForm("UserProfile", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <!-- Basic Details -->
                <div class="form-header">
                    <h3>Basic Profile Details</h3>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="firstname">First Name*</label>
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @id = "firstname", placeholder = "Enter your First name" })
                            @Html.ValidationMessageFor(model => model.FirstName, "")
                            @*<input type="text" class="form-control" id="firstname" placeholder="Enter your first name" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="lastname">Last Name*</label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @id = "lastname", placeholder = "Enter your Last Name" })
                            @Html.ValidationMessageFor(model => model.LastName, "")
                            @* <input type="text" class="form-control" id="lastname" placeholder="Enter your last name" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="form-email" class="form-group">
                            <label for="email">Email*</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "email", placeholder = "Enter your Email Address" })
                            @Html.ValidationMessageFor(model => model.Email, "")
                            @*<input type="email" class="form-control" id="email" placeholder="Enter your email address" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="form-bdate" class="form-group">
                            <label for="bdate">Date Of Birth</label>
                            <div class="dob">
                                @Html.TextBoxFor(model => model.DOB, new { @type= "text", @onfocus = "(this.type='date')", @onblur = "(this.type='text')", @class = "form-control date cal", @id = "bdate", placeholder = "Enter your date of birth" })
                                @Html.ValidationMessageFor(model => model.DOB, "")
                                @* <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control date cal" id="bdate" placeholder="Enter your date of birth">*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="form-gender" class="form-group">
                            <label for="gender">Gender</label>
                            <div class="cos">
                                @Html.DropDownListFor(model => model.Gender, new SelectList(Model.GenderList, "ID", "Value", Model.Gender), "Select your ", new { @class = "form-control", id = "gender" })
                                @Html.ValidationMessageFor(model => model.Gender, "")
                                @*<select class="form-control" id="gender" name="gender">
                        <option>Select your gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>*@
                            </div>
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div id="form-number" class="form-group">
                            <label for="lname">CountryCode</label><br>
                            <span class="phonenumber">
                                  @* <input type="text" id="phonenumber" name="phonenumber" placeholder="+91">*@
                                  @Html.DropDownListFor(model => model.CountryCode, new SelectList(Model.CountryList, "ID", "CountryCode", Model.CountryCode), "Select your ", new { @class = "form-control", id = "Country" })
                                  @Html.ValidationMessageFor(model => model.CountryCode, "")
                                  @*<img src="~/images/arrow-down.svg">*@
                            </span>
                        </div>
                    </div>

                        <div class="col-md-5">
                            <div id="form-number" class="form-group">
                                <label for="phone">Phone Number</label>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phone", placeholder = "Enter your Phone number" })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "")
                                @*<input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">*@
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div id="form-pic" class="form-group">
                                <label for="email">Profile Picture</label>
                                <div class="image-upload form-control text-center">
                                    <label for="file-input">
                                        <img src="images/upload.png" alt="upload"><br>
                                        Upload a picture
                                    </label>
                                    @Html.TextBoxFor(x => x.ProfilePicture, new { @class = "form-control", @id = "file-input", @onchange = "return picturevalidation()", type = "file" })
                                    @*<input type="file" class="form-control" id="file-input" accept="image/*">*@
                                </div>

                            </div>
                        </div>
                    </div>


                <!-- Address Details -->
                <div class="form-header">
                    <h3>Address Details</h3>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="Address1">Address Line 1*</label>
                            @Html.TextBoxFor(model => model.AddressLine1, new { @class = "form-control", @id = "Address1", placeholder = "Enter your address 1" })
                            @Html.ValidationMessageFor(model => model.AddressLine1, "")
                            @*<input type="text" class="form-control" id="Address1" placeholder="Enter your address" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="Address2">Address Line 2</label>
                            @Html.TextBoxFor(model => model.AddressLine2, new { @class = "form-control", @id = "Address2", placeholder = "Enter your address 2" })
                            @Html.ValidationMessageFor(model => model.AddressLine2, "")
                            @* <input type="text" class="form-control" id="Address2" placeholder="Enter your address">*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="city">City*</label>
                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", @id = "city", placeholder = "Enter your City" })
                            @Html.ValidationMessageFor(model => model.City, "")
                            @*<input type="text" class="form-control" id="city" placeholder="Enter your city" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="state">State*</label>
                            @Html.TextBoxFor(model => model.State, new { @class = "form-control", @id = "state", placeholder = "Enter your state" })
                            @Html.ValidationMessageFor(model => model.State, "")
                            @* <input type="text" class="form-control" id="state" placeholder="Enter your state" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="zipcode">Zip Code*</label>
                            @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", @id = "zipcode", placeholder = "Enter your zip code" })
                            @Html.ValidationMessageFor(model => model.ZipCode, "")
                            @* <input type="text" class="form-control" id="zipcode" placeholder="Enter your zipcode" required>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-country">
                            <label for="country">Country*</label>
                            <div class="cos">
                                @Html.DropDownListFor(model => model.Country, new SelectList(Model.CountryList, "ID", "Name", Model.Gender), "Select your ", new { @class = "form-control", id = "country" })

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Study Details -->
                <!-- Address Details -->
                <div class="form-header">
                    <h3>University and College Information</h3>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="university">University</label>
                            @Html.TextBoxFor(model => model.University, new { @class = "form-control", @id = "university", placeholder = "Enter your University" })
                            @Html.ValidationMessageFor(model => model.University, "")
                            @* <input type="text" class="form-control" id="university" placeholder="Enter your university">*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-text">
                            <label for="college">College</label>
                            @Html.TextBoxFor(model => model.College, new { @class = "form-control", @id = "college", placeholder = "Enter your College" })
                            @Html.ValidationMessageFor(model => model.College, "")
                            @*<input type="text" class="form-control" id="college" placeholder="Enter your college">*@
                        </div>
                    </div>
                </div>
                <button id="btn-form" type="submit" class="btn">Submit</button>
            }


        </div>
    </section>
    <!-- footer -->
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-8 col-12">
                    <div id="copyright">
                        <p>
                            Copyright &copy; Tatwasoft All rights reserved.
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-4 col-12">
                    <ul class="social-list">
                        <li><a href="#"><img src="~/images/facebook.png" alt="facebook" class="img-responsive img-circle"></a></li>
                        <li><a href="#"><img src="~/images/twitter.png" alt="twitter" class="img-responsive img-circle"></a></li>
                        <li><a href="#"><img src="~/images/linkedin.png" alt="linkedin" class="img-responsive img-circle"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/js/bootstrap/bootstrap.min.js"></script>

    <!-- International JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js" integrity="sha512-DNeDhsl+FWnx5B1EQzsayHMyP6Xl/Mg+vcnFPXGNjUZrW28hQaa1+A4qL9M+AiOMmkAhKAWYHh1a+t6qxthzUw==" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js" integrity="sha512-BNZ1x39RMH+UYylOW419beaGO0wqdSkO7pi1rYDYco9OL3uvXaC/GTqA5O4CVK2j4K9ZkoDNSSHVkEQKkgwdiw==" crossorigin="anonymous"></script>


    <!-- Custom JS -->
    <script src="~/js/userprofile.js"></script>

</body>

</html>

